using HarmonyLib;

namespace ReachForStars
{
    [HarmonyPatch(typeof(ChatBubble), nameof(ChatBubble.SetText))]
    public class MentionSystem
    {
        public static bool Prefix(ref string chatText, ChatBubble __instance)
        {
            ///Rich Text behavior
            ///Located in Patches/Chat/RichText
            chatText = chatText.RichtextIfy();
            


            ///Whispering Logic
            ///Located in Patches/Chat/Whisper
            chatText = chatText.TryWhisper(__instance);
            

            return true;
        }
    }
}
